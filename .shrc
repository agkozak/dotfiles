# ~/.shrc - bourne shell startup file
#
# https://github.com/agkozak/dotfiles
#
# This file will be used if the shell is invoked for interactive use and
# the environment variable ENV is set to this file. It is sourced at the
# beginnning of .zshrc and .bashrc
#
# shellcheck shell=sh

[ -z "$AGKOZAK_SYSTEMINFO" ] && AGKOZAK_SYSTEMINFO="$(uname -a)"

#shellcheck source=/dev/null
if [ -z "$ENV" ]; then
  [ -f "$HOME/.profile" ] && . "$HOME/.profile"
fi

# Begin .shrc benchmark {{{

_is_busybox() {
  case $0 in
    ash|sh)
      if command -v readlink > /dev/null 2>&1; then
        case "$(exec 2>/dev/null; readlink "/proc/$$/exe")" in
          */busybox) return 0 ;;
          *) return 1 ;;
        esac
      fi
      ;;
    *) return 1 ;;
  esac
}

if [ "${AGKOZAK_RC_BENCHMARKS:-0}" -eq 1 ]; then
  case $AGKOZAK_SYSTEMINFO in
    FreeBSD*) ;;                          # BSD `date` cannot handle nanoseconds.
    # Ubuntu busybox sh handles math oddly
    *) ! _is_busybox && start=$(($(date +%s%N)/1000000)) ;;
  esac
fi

# }}}

# Aliases {{{1

case $(type fc) in                              # fc can be Windows file compare
  *builtin) alias h='fc -l' ;;
esac

alias j=jobs
alias m='$PAGER'
alias g='egrep -i'

# enable color support of ls and also add handy aliases {{{2

case $TERM in
  *-256color) SHRC_TERM_COLORS=256 ;;
  vt100|dumb) SHRC_TERM_COLORS=-1 ;;
  *)
    case $AGKOZAK_SYSTEMINFO in
      *BSD*|*bsd*|*[Dd]ragon[Ff]ly*) SHRC_TERM_COLORS=$(tput Co) ;;
      *) SHRC_TERM_COLORS=$(tput colors) ;;
    esac
    ;;
esac

# Do not enable colors in Emacs shell
if [ -z "$INSIDE_EMACS" ] && [ "$TERM" != 'dumb' ]; then

  if [ "$SHRC_TERM_COLORS" -ge 8 ]; then
    case $AGKOZAK_SYSTEMINFO in
      Darwin*|FreeBSD*)
        LS_OPTIONS="-G"
        ;;
      *Msys|*Cygwin)
        LS_OPTIONS='--group-directories-first --color -F -h -T 0 --hide="NTUSER*" --hide="ntuser*"'
        ;;
      CYGWIN*GNU/Linux|SunOS) ;;                        # They don't use Gnu ls
      *)
        LS_OPTIONS='--group-directories-first --color -F -h -T 0'
        ;;
    esac
  else
    case $AGKOZAK_SYSTEMINFO in
      *Msys|*Cygwin)
        LS_OPTIONS='--group-directories-first -F -h -T 0 --hide="NTUSER*" --hide="ntuser*"'
        ;;
      Darwin*|FreeBSD*|CYGWIN*GNU/Linux|SunOS*) ;;
      *) LS_OPTIONS='--group-directories-first -F -h -T 0'
    esac
  fi

  alias ls="ls $LS_OPTIONS"

  if command -v dircolors > /dev/null 2>&1; then
    if [ -r "$HOME/.dircolors" ] && [ "$SHRC_TERM_COLORS" -ge 256 ]; then
      eval "$(dircolors -b "$HOME/.dircolors")"
    elif [ "$SHRC_TERM_COLORS" -ge 8 ]; then
      eval "$(dircolors -b)"
    fi
  fi

  case $AGKOZAK_SYSTEMINFO in
    SunOS*)
      [ -x /usr/gnu/bin/ls ] && alias ls='/usr/gnu/bin/ls --color=auto'
      ;;
    *)
      # alias ls='ls --color=auto'
      # shellcheck disable=SC2139
      # alias ls="/bin/ls $LS_OPTIONS"
      alias dir='dir --color=auto'
      alias vdir='vdir --color=auto'

      alias grep='grep --color=auto'
      alias fgrep='fgrep --color=auto'
      alias egrep='egrep --color=auto'
      ;;
  esac
fi

# }}}2

# some more ls aliases {{{2

alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

alias lr='ls -tRFh'   # sorted by date, recursive, show type, human-readable
alias lt='ls -ltFh'   # long list, sorted by date, show type, human-readable
alias ldot='ls -ld .*'
alias lS='ls -1FSsh'
alias lart='ls -1Fcart'
alias lrt='ls -1Fcrt'

# }}}2

command -v hue > /dev/null 2>&1 && alias bri='hue set all -b'

case $KSH_VERSION in
  *R55*) ;; # mksh version R55 erroneously does not allow these aliases
  *)
    alias ..='cd ..'
    alias ...='cd ../..'
    ;;
esac
alias c='clear'
alias composer='$HOME/bin/composer.phar'
alias dud='du -d 1 -h'
alias duf='du -sh *'
# command -v dos2unix > /dev/null 2>&1 || alias dos2unix='perl -p -i -e "s/\\r\\n/\\n/g"'
alias fd='find . -type d -name'
alias ff='find . -type f -name'
alias github-stats='github-stats --token $GITHUB_STATS_TOKEN'
alias help='man'
alias p='ps -f'
alias phpunit='$HOME/bin/phpunit.phar'
alias sgrep='grep -R -n -H -C 5 --exclude-dir={.git,.svn,CVS} '
alias sortnr='sort -n -r'
alias t='tail -f'
alias v='findv'
alias vv='findv --verbose'
command -v vim > /dev/null 2>&1 && alias vi='vim'
alias wp='$HOME/bin/wp-cli.phar'
alias yta='youtube-dl --audio-format best -x '

# System-specific aliases {{{2

case "$AGKOZAK_SYSTEMINFO" in
  *Msys|*Cygwin)
    alias choco='winpty choco'
    alias cinst='winpty cinst'
    alias cuninst='winpty cuninst'
    alias cup='winpty cup'
    alias eslint='winpty $APPDATA/npm/eslint.cmd'
    alias ghci='ghcii.sh'
    alias gvim='/c/Windows/gvim.bat'
    alias node='winpty node'
    alias pear='/c/tools/php/pear.bat'
    alias php='winpty php'
    alias psysh='winpty $APPDATA/Composer/vendor/bin/psysh.bat'
    ;;
esac

case "$AGKOZAK_SYSTEMINFO" in
  *Msys)
    alias npm='winpty /c/Program\ Files/nodejs/npm.cmd'
    alias wp='winpty php $HOME/bin/wp-cli.phar --no-color'
    ;;
  *Cygwin)
    alias composer='php $(cygpath -w "$HOME/bin/composer.phar")'
    alias npm='winpty /cygdrive/c/Program\ Files/nodejs/npm.cmd'
    ;;
  *raspberrypi*)
    # Because LXTerminal can't set TERM
    if [ "$XDG_CURRENT_DESKTOP" = 'LXDE' ]; then
      if [ "$TERM" = 'xterm' ]; then
        TERM='xterm-256color'
      fi
    fi
    alias temp='/opt/vc/bin/vcgencmd measure_temp | egrep "[0-9.]{4,}" -o'
    ;;
  FreeBSD*|SunOS*)
    alias tmux='TERM=xterm-256color tmux'
    alias mutt='TERM=xterm-256color mutt'
    ;;
esac

# }}}2

# }}}1

# Prompt {{{1

# set prompt: ``username@hostname$ ''

if [ "$0" = 'sh' ]; then
  PS1=$(whoami)@$(hostname | sed 's/\..*//')
  case $(id -u) in
    0) PS1="${PS1}# " ;;
    *) PS1="${PS1}$ " ;;
  esac
fi

# If possible, load the pan-POSIX Polyglot Prompt
# But not in zsh -- it uses agkozak-zsh-theme
if [ -z "$ZSH_VERSION" ]; then
  if [ -f "$HOME/dotfiles/themes/polyglot/polyglot.sh" ]; then
    # shellcheck source=/dev/null
    . "$HOME/dotfiles/themes/polyglot/polyglot.sh"
  fi
fi

# }}}1

# search path for cd(1)
# CDPATH=:$HOME

# For ksh93/mksh

# vi-style line editing
set -o vi

case $KSH_VERSION in *93*) set -o globstar ;; esac

HISTSIZE=10000

case $KSH_VERSION in
  *'PD KSH'*) HISTFILE="$HOME/.pdksh_history" ;;
  *MIRBSD*) HISTFILE="$HOME/.mksh_history" ;;
esac

# find shorthand {{{

f() {
  find . -name "$1" 2>&1 | grep -v 'Permission denied'
}

# }}}

# Pull in updates from the dotfiles repo and install them {{{1

update_dotfiles() {
  CUR_DIR="$PWD"
  cd "$HOME/dotfiles" && git pull && ./install.sh
  for i in $(find . -name ".git" | cut -c 3-); do
    cd "$i" || exit
    cd ..
    git pull
    cd "$HOME/dotfiles" || exit
  done
  cd "$CUR_DIR" || exit
  unset CUR_DIR i
}

# }}}1

if [ -f "$HOME/.shrc.local" ]; then
  # shellcheck source=/dev/null
  . "$HOME/.shrc.local"
fi

# End .shrc benchmark {{{

if [ "${AGKOZAK_RC_BENCHMARKS:-0}" -eq 1 ]; then
  case $AGKOZAK_SYSTEMINFO in
    FreeBSD*) ;;
    *)
      if ! _is_busybox; then
        finish=$(($(date +%s%N)/1000000))
        difference=$((finish-start))
        echo ".shrc loaded in ${difference}ms."
      fi
      ;;
  esac
fi

